<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <!--TODO: (EW) fix this layout. surrogate pairs' unicode text gets cut off. maybe stack
         vertically. also, it might be useful to allow either a single or a pair of unicode text for
         surrogate pairs (eg: U+1D56B == U+D835 U+DD6B). a separate text field seems obnoxious, so
         maybe just a checkbox to use a single unicode identifier for surrogate pairs (both lookup
         and entry). also, get rid of the hints since they look weird when other fields are cleared
         when one has invalid data (keeping for now for ease of layout redesign).-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="Character" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Codepoint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="Unicode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From" />

        <EditText
            android:id="@+id/codepoint_dialog_start_character"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="A"/>

        <EditText
            android:id="@+id/codepoint_dialog_start_codepoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="65"/>

        <EditText
            android:id="@+id/codepoint_dialog_start_unicode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="U+0041"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To" />

        <EditText android:id="@+id/codepoint_dialog_end_character"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="Z"/>

        <EditText android:id="@+id/codepoint_dialog_end_codepoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="90"/>

        <EditText android:id="@+id/codepoint_dialog_end_unicode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:hint="U+005A"/>

    </GridLayout>

</LinearLayout>