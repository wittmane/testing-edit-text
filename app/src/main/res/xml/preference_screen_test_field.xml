<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/input_type_category"
        android:key="pref_key_input_type_category">

        <com.wittmane.testingedittext.settings.preferences.EnhancedListPreference
            android:key="pref_key_test_field_input_type_class_"
            android:title="@string/input_type_class"
            android:entries="@array/type_classes"
            android:entryValues="@array/type_class_values"/>

        <com.wittmane.testingedittext.settings.preferences.EnhancedListPreference
            android:key="pref_key_test_field_input_type_text_variation_"
            android:title="@string/input_type_variation"
            android:entries="@array/type_text_variations"
            android:entryValues="@array/type_text_variation_values"/>

        <com.wittmane.testingedittext.settings.preferences.EnhancedListPreference
            android:key="pref_key_test_field_input_type_text_flag_multi_line_"
            android:title="@string/input_type_text_flag_multi_line_title"
            android:entries="@array/type_text_multi_line_flags"
            android:entryValues="@array/type_text_multi_line_flag_values"/>

        <com.wittmane.testingedittext.settings.preferences.EnhancedListPreference
            android:key="pref_key_test_field_input_type_text_flag_cap_"
            android:title="@string/input_type_text_flag_cap"
            android:entries="@array/type_text_cap_flags"
            android:entryValues="@array/type_text_cap_flag_values"/>

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_input_type_text_flag_auto_complete_"
            android:title="@string/input_type_text_flag_auto_complete" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_input_type_text_flag_auto_correct_"
            android:title="@string/input_type_text_flag_auto_correct" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_input_type_text_flag_no_suggestions_"
            android:title="@string/input_type_text_flag_no_suggestions" />

        <com.wittmane.testingedittext.settings.preferences.EnhancedListPreference
            android:key="pref_key_test_field_input_type_number_variation_"
            android:title="@string/input_type_variation"
            android:entries="@array/type_number_variations"
            android:entryValues="@array/type_number_variation_values"/>

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_input_type_number_flag_signed_"
            android:title="@string/input_type_number_flag_signed" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_input_type_number_flag_decimal_"
            android:title="@string/input_type_number_flag_decimal" />

        <com.wittmane.testingedittext.settings.preferences.EnhancedListPreference
            android:key="pref_key_test_field_input_type_datetime_variation_"
            android:title="@string/input_type_variation"
            android:entries="@array/type_datetime_variations"
            android:entryValues="@array/type_datetime_variation_values"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/ime_options_category"
        android:key="pref_key_ime_options_category">

        <com.wittmane.testingedittext.settings.preferences.EnhancedListPreference
            android:key="pref_key_test_field_ime_options_action_"
            android:title="@string/ime_options_action"
            android:entries="@array/ime_options_actions"
            android:entryValues="@array/ime_options_action_values"/>

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_force_ascii_"
            android:title="@string/ime_options_flag_force_ascii" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_navigate_next_"
            android:title="@string/ime_options_flag_navigate_next" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_navigate_previous_"
            android:title="@string/ime_options_flag_navigate_previous" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_no_accessory_action_"
            android:title="@string/ime_options_flag_no_accessory_action" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_no_enter_action_"
            android:title="@string/ime_options_flag_no_enter_action" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_no_extract_ui_"
            android:title="@string/ime_options_flag_no_extract_ui" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_no_fullscreen_"
            android:title="@string/ime_options_flag_no_fullscreen" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_ime_options_flag_no_personalized_learning_"
            android:title="@string/ime_options_flag_no_personalized_learning" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/ime_action_category"
        android:key="pref_key_ime_action_category">

        <com.wittmane.testingedittext.settings.preferences.TextDialogPreference
            android:key="pref_key_test_field_ime_action_id_"
            android:title="@string/ime_action_id"
            app:inputType="number|numberSigned" />

        <com.wittmane.testingedittext.settings.preferences.TextDialogPreference
            android:key="pref_key_test_field_ime_action_label_"
            android:title="@string/ime_action_label"
            app:inputType="text" />

    </PreferenceCategory>

    <!--TODO: (EW) see if there is a better category for some of these-->
    <PreferenceCategory android:title="Misc"
        android:key="pref_key_misc_category">

        <com.wittmane.testingedittext.settings.preferences.TextDialogPreference
            android:key="pref_key_test_field_private_ime_options_"
            android:title="@string/private_ime_options"
            app:inputType="text" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_select_all_on_focus_"
            android:title="@string/select_all_on_focus" />

        <com.wittmane.testingedittext.settings.preferences.TextDialogPreference
            android:key="pref_key_test_field_max_length_"
            android:title="@string/max_length"
            app:defaultText="-1"
            app:inputType="number" />

        <com.wittmane.testingedittext.settings.preferences.LongTextSwitchPreference
            android:key="pref_key_test_field_allow_undo_"
            android:title="@string/allow_undo"
            android:summary="@string/dynamic_set_not_supported_in_framework"
            android:defaultValue="true" />

        <com.wittmane.testingedittext.settings.preferences.LocaleEntryListPreference
            android:key="pref_key_test_field_text_locales_"
            android:title="@string/text_locales" />

        <com.wittmane.testingedittext.settings.preferences.LocaleEntryListPreference
            android:key="pref_key_test_field_ime_hint_locales_"
            android:title="@string/ime_hint_locales"
            app:maxEntries="3"/>

        <com.wittmane.testingedittext.settings.preferences.TextDialogPreference
            android:key="pref_key_test_field_default_text_"
            android:title="@string/default_text"
            app:defaultText=""
            app:inputType="textMultiLine|textStyled" />

        <com.wittmane.testingedittext.settings.preferences.TextDialogPreference
            android:key="pref_key_test_field_hint_text_"
            android:title="@string/hint_text"
            app:defaultText=""
            app:inputType="textMultiLine|textStyled" />

    </PreferenceCategory>

</PreferenceScreen>
