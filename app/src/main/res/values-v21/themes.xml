<resources>
    <style name="Theme.DeviceDefault" parent="@android:style/Theme.DeviceDefault">
        <!-- (EW) Android Theme.DeviceDefault inherits from Theme.Material (as of versions 21
             (Lollipop) through at least 31 (S / Android 12)), so matching our Theme.Material since
             this can't inherit from both-->
        <item name="isLightTheme">false</item>
        <item name="floatingToolbarPopupBackgroundDrawable">@drawable/floating_popup_background_dark</item>
        <item name="textEditSuggestionContainerLayout">@layout/text_edit_suggestion_container_material</item>
        <item name="textEditSuggestionHighlightStyle">@style/TextAppearance.Material.TextSuggestionHighlight</item>
    </style>

    <style name="Theme.DeviceDefault.Light" parent="@android:style/Theme.DeviceDefault.Light">
        <!-- (EW) Android Theme.DeviceDefault.Light inherits from Theme.Material.Light (as of
             versions 21 (Lollipop) through at least 31 (S / Android 12)), so matching our
             Theme.Material.Light since this can't inherit from both-->
        <item name="isLightTheme">true</item>
        <item name="floatingToolbarPopupBackgroundDrawable">@drawable/floating_popup_background_light</item>
        <item name="textEditSuggestionContainerLayout">@layout/text_edit_suggestion_container_material</item>
        <item name="textEditSuggestionHighlightStyle">@style/TextAppearance.Material.TextSuggestionHighlight</item>
    </style>

    <style name="Theme.Material" parent="@android:style/Theme.Material">
        <!-- (EW) from Theme in themes (versions 23 (M) through at least 31 (S)) that the Android
             Material theme inherits from -->
        <item name="isLightTheme">false</item>
        <item name="floatingToolbarPopupBackgroundDrawable">@drawable/floating_popup_background_dark</item>

        <!-- (EW) from themes_material (versions 24 (Nougat) through at least 31
             (S / Android 12)) -->
        <!-- (EW) the AOSP version for versions 21 (Lollipop) through 23 (Marshmallow) essentially
             used the Holo theme, which used code rather than resource files for these. see the
             comment on Theme.Holo. rather than matching the framework functionality, which would be
             done by just matching what we're doing on Theme.Holo for these versions, this matches
             more recent versions' functionality in order to be more consistent between different
             versions of this app and the Material theme generally -->
        <item name="textEditSuggestionContainerLayout">@layout/text_edit_suggestion_container_material</item>
        <item name="textEditSuggestionHighlightStyle">@style/TextAppearance.Material.TextSuggestionHighlight</item>
    </style>

    <style name="Theme.Material.Light" parent="@android:style/Theme.Material.Light">
        <!-- (EW) from Theme.Light in themes (versions 23 (Marshmallow) through at least 31
             (S / Android 12)) that the Android Material light theme inherits from-->
        <item name="isLightTheme">true</item>
        <item name="floatingToolbarPopupBackgroundDrawable">@drawable/floating_popup_background_light</item>

        <!-- (EW) from themes_material (versions 24 (Nougat) through at least 31
             (S / Android 12)) -->
        <!-- (EW) see comment on Theme.Material -->
        <item name="textEditSuggestionContainerLayout">@layout/text_edit_suggestion_container_material</item>
        <item name="textEditSuggestionHighlightStyle">@style/TextAppearance.Material.TextSuggestionHighlight</item>
    </style>
</resources>